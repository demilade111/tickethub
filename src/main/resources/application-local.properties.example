# Local Development Profile Configuration Example
# Copy this file to application-local.properties and update with your actual local values
# DO NOT commit application-local.properties to version control

# Database Configuration (Local Development)
# Update these with your local PostgreSQL credentials
spring.datasource.url=jdbc:postgresql://localhost:5432/tickethub
spring.datasource.username=your_local_db_username
spring.datasource.password=your_local_db_password

# JWT Configuration (Local Development)
# For local development, you can use any string (minimum 32 characters)
# For production, generate a secure secret: openssl rand -base64 32
jwt.secret=dev-secret-key-change-this-for-production-use-only-minimum-32-characters-long
jwt.expiration=86400000

# DevTools (Only for local development)
spring.devtools.restart.enabled=true
spring.devtools.livereload.enabled=true

# Show SQL in local development (helpful for debugging)
spring.jpa.show-sql=true

